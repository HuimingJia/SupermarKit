:coffee
  @current_user_id = #{current_user.id}

.container.user-groups-index
  .row
    .col.l12.align-center
      %h1 #{current_user.name}'s Kits
  - @user_groups.each_slice(3) do |groups|
    .row
      - groups.each do |group|
        .col.l4
          .card.image-wrapper.hoverable
            = link_to group do
              .card-image
                = image_tag 'user_groups/default3.jpg'
                %span.card-title= group.name
            .card-content
              %p.truncate
                - if group.description.present?
                  = group.description
                - else
                  Describe your
                  = link_to 'your Kit.', edit_user_group_path(group), class: :highlight
            .card-action
              = link_to 'Edit', user_group_path(group), class: 'highlight'
  .fixed-action-btn
    = link_to new_user_group_path, class: 'btn-floating btn-large waves-effect waves-light' do
      %i.material-icons add
