.container.items-show
  .row
    .columns.large-8.large-centered
      .widget
        .header
          %h3 Item
        .main
          .row
            .columns.large-12
              .row
                .columns.large-12
                  %label Name
                  %p= @item.name
              %hr
              .row
                .columns.large-12
                  %label Description
                  %p= @item.description
              %hr
              .row
                .columns.large-12
                  = link_to 'Edit Item', edit_item_path(@item), class: 'button'
