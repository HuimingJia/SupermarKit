.container.items-edit
  .row
    .columns.large-8.large-centered
      .widget
        .row
          .columns.large-8.large-centered
            .header
              %h3 Edit Item
            .main
              .row
                = simple_form_for @item do |f|
                  .columns.large-12
                    = f.input :name
                    = f.input :description, as: :text
                    .row
                      .columns.large-6
                        = f.input :groceries_items, label: "Grocery", collection: @item.groceries_items, selected: 1, label_method: ->(g) { Grocery.find(g.grocery_id).name }
                      .columns.large-6
                        = f.simple_fields_for :groceries_items do |g|
                          = g.input :quantity, input_html: { class: 'quantity-input', id: "grocery-item-#{g.object.id}" }
                    .row
                      .columns.large-12
                        = f.input :price, label: 'Price per item'
                        = f.button :submit, 'Update', class: 'button radius'
