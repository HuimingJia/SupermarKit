.container.new-user-session
  .row
    .columns.large-8.large-centered
      .widget
        .header
          %h1 Login
        .main
          .row
          = simple_form_for :session, url: user_sessions_path do |f|
            .row.social-icons
              .columns.large-6
                = f.input :email
                = f.input :password
                = f.button :submit, 'Login'
              .columns.large-6.text-center
                = link_to auth_at_provider_path(provider: :facebook) do
                  = fa_icon 'facebook'
                = link_to auth_at_provider_path(provider: :google) do
                  = fa_icon 'google'
                = link_to auth_at_provider_path(provider: :github) do
                  = fa_icon 'github'