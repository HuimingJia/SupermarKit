:coffee
  @grocery_id = #{@grocery.id}

.container.groceries-show
  .row
    .columns.large-12
      .widget
        .header
          %h3 Groceries for #{@grocery.name}
        .main
          .row
            .columns.large-12
              %table#grocery-table
                %thead
                  %tr
                    %th ID
                    %th Name
                    %th Description
                    %th Price
                    %th Last Updated
                    %th Remove
          .row
            .columns.large-12
              %ul.button-group
                %li
                  = link_to 'Back to Kit', @grocery.user_group, class: 'button secondary'
                %li
                  = link_to 'Add item', new_grocery_item_path(@grocery), class: :button